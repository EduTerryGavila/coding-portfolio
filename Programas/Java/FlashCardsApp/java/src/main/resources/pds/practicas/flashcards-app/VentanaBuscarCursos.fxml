<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miapp.flashcards.vista.ControladorBuscarCursos">
   <children>
      <Label text="Buscar Cursos" textFill="#009688">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <HBox alignment="CENTER" spacing="10.0" maxWidth="600.0">
         <children>
            <TextField fx:id="txtBusqueda" promptText="Nombre del curso..." HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#accionBuscar" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Buscar">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      
      <Label text="Resultados de la búsqueda (Cursos de otros profesores):" textFill="#666666" alignment="CENTER_LEFT" maxWidth="600.0"/>

      <ListView fx:id="listaResultados" prefHeight="350.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
      
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#accionAnadir" prefWidth="180.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="➕ Añadir a Mis Cursos">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            
            <Button mnemonicParsing="false" onAction="#accionExportar" prefWidth="120.0" style="-fx-background-color: #7E57C2; -fx-text-fill: white;" text="Exportar">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>