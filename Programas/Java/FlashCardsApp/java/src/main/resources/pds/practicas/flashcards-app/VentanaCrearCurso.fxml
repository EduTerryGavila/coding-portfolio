<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miapp.flashcards.vista.ControladorCrearCurso">
   <children>
      <Label text="Crear / Editar Curso" textFill="#009688">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <VBox maxWidth="600.0" spacing="5.0">
         <children>
            <Label text="Nombre del Curso:" />
            <TextField fx:id="txtNombreCurso" promptText="Ej: Matemáticas Avanzadas" />
         </children>
      </VBox>
      
      <VBox maxWidth="600.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-padding: 15; -fx-background-color: #f9f9f9; -fx-border-radius: 5;">
          <children>
              <Label text="1. Configuración de la Pregunta:" style="-fx-font-weight: bold;"/>
              
              <HBox spacing="10.0" alignment="CENTER_LEFT">
                   <TextField fx:id="txtEnunciadoPregunta" promptText="Escribe el enunciado aquí..." HBox.hgrow="ALWAYS"/>
                   <ComboBox fx:id="comboTipoPregunta" prefWidth="180.0" promptText="Tipo de Pregunta" onAction="#alCambiarTipoPregunta"/>
              </HBox>

              <VBox fx:id="panelAbierta" spacing="5.0" managed="false" visible="false">
                  <Label text="Respuesta correcta:" />
                  <TextField fx:id="txtRespuestaAbierta" promptText="Escribe la respuesta exacta..." />
              </VBox>

              <VBox fx:id="panelOpciones" spacing="8.0" managed="false" visible="false">
                  <Label text="Opciones (marca la correcta):" />
                  
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                      <RadioButton fx:id="rbOp1" selected="true">
                          <toggleGroup>
                              <ToggleGroup fx:id="grupoOpciones"/>
                          </toggleGroup>
                      </RadioButton>
                      <TextField fx:id="txtOp1" promptText="Opción A" HBox.hgrow="ALWAYS"/>
                  </HBox>
                  
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                      <RadioButton fx:id="rbOp2" toggleGroup="$grupoOpciones"/>
                      <TextField fx:id="txtOp2" promptText="Opción B" HBox.hgrow="ALWAYS"/>
                  </HBox>
                  
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                      <RadioButton fx:id="rbOp3" toggleGroup="$grupoOpciones"/>
                      <TextField fx:id="txtOp3" promptText="Opción C" HBox.hgrow="ALWAYS"/>
                  </HBox>
              </VBox>

              <Button onAction="#accionAnadirPregunta" text="+ Añadir Pregunta" maxWidth="Infinity" style="-fx-background-color: #2196F3; -fx-text-fill: white;">
                  <font>
                      <Font name="System Bold" size="12.0" />
                  </font>
                  <VBox.margin>
                      <Insets top="5.0" />
                  </VBox.margin>
              </Button>
          </children>
      </VBox>
      
      <VBox maxWidth="600.0" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Resumen del Curso:" />
            <ListView fx:id="listaPreguntas" prefHeight="200.0" />
            
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
               <children>
                  <Button onAction="#accionEditarPregunta" text="Editar Seleccionada" style="-fx-background-color: #FFB74D; -fx-text-fill: white;"/>
                  <Button onAction="#accionBorrarPregunta" text="Borrar Seleccionada" style="-fx-background-color: #E57373; -fx-text-fill: white;"/>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      
      <Button mnemonicParsing="false" onAction="#accionGuardarCurso" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="GUARDAR CURSO">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>